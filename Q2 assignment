#task 1
first_number = int(input("enter the 1st number"))
second_number = int(input("enter the 2nd number"))
third_number = int(input("enter the 3rd number"))

if first_number > (second_number and third_number):
    print(f"number {first_number} is greater") 
elif  second_number > (first_number and third_number):
    print(f"number {second_number} is greater") 
elif  third_number > (second_number and first_number):
    print(f"number {third_number} is greater") 

#task 2

first_number = int(input("enter the 1st number"))
second_number = int(input("enter the 2nd number"))
third_number = int(input("enter the 3rd number"))

if first_number > (second_number and third_number):
    print(f"number {first_number} is greater") 
elif  second_number > (first_number and third_number):
    print(f"number {second_number} is greater") 
elif  third_number > (second_number and first_number):
    print(f"number {third_number} is greater") 

if first_number < (second_number and third_number):
    print(f"number {first_number} is smallest") 
elif  second_number < (first_number and third_number):
    print(f"number {second_number} is smallest") 
elif  third_number < (second_number and first_number):
    print(f"number {third_number} is smallest") 